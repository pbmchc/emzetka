<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.pbmchc.emzetka.activities.SingleStopActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/singleStopAppBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/support_toolbar_rect"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/emzetka_list_stop_small"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stopName"
            android:background="@android:color/white"
            android:textColor="@android:color/primary_text_light"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="@string/placeholder"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:height="50dp"/>
        </LinearLayout>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:id="@+id/singleStopTabs"
        android:clickable="true"/>
    </android.support.design.widget.AppBarLayout>
    <include layout="@layout/content_single_stop"
        android:layout_below="@id/singleStopAppBar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="98dp"/>
</android.support.design.widget.CoordinatorLayout>
